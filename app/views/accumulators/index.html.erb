<p id="notice"><%= notice %></p>

<h1>Accumulators</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Uplink</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accumulators.each do |accumulator| %>
      <tr>
        <td><%= accumulator.value %></td>
        <td><%= accumulator.uplink %></td>
        <td><%= link_to 'Show', accumulator %></td>
        <td><%= link_to 'Edit', edit_accumulator_path(accumulator) %></td>
        <td><%= link_to 'Destroy', accumulator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Accumulator', new_accumulator_path %>
